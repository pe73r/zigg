<section id="section-{{ section.id }}" class="section" data-section-id="{{ section.id }}" data-section-type="picto">
  <div class="grid picto__container">
    {% for block in section.blocks %}
      <div class="grid__cell grid--center 1/{{ section.settings.picto_per_line_desktop }}--lap-and-up 1/{{ section.settings.picto_per_line_mobile }}--pocket">
        {% if block.settings.image_svg != blank %}
            <img class="picto__image picto__size--{{section.settings.picto_max_width}}" src="{{ block.settings.image_svg }}" alt="{{ block.settings.image.alt | default: shop.name }}"/>
        {% else %}
        <img src="{{ block.settings.image | img_url: master }}"
             alt="{{ block.settings.image.alt | default: shop.name }}"
             class="picto__image picto__size--{{section.settings.picto_max_width}}">
        {% endif %}
        <h3 class="picto__title HeadingPosterama u-h4">{{block.settings.title}}</h3>
        <p class="picto__texte">{{block.settings.text}}</p> 
      </div>
    {% endfor %}
  </div>
</section>
